{
  "name": "canary-app-template",
  "version": "1.0.0",
  "description": "A bare bones app template built with Canary Design System for rapid prototyping",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && cd backend && npm install --legacy-peer-deps && npm run build",
    "build:frontend": "vite build",
    "build:backend": "cd backend && npm install --legacy-peer-deps && npm run build",
    "preview": "vite preview",
    "setup-npmrc": "node scripts/setup-npmrc.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.43",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@sureapp/canary-design-system": "^3.12.2",
    "@tanstack/react-query": "^5.17.19",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-orm": "^0.44.6",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "@tiptap/core": "2.25.0",
    "@tiptap/extension-*": "2.25.0",
    "@tiptap/react": "2.25.0",
    "@tiptap/starter-kit": "2.25.0"
  },
  "vite": {
    "rollup": "npm:@rollup/wasm-node"
  },
  "vite-plugin-react": {
    "rollup": "npm:@rollup/wasm-node"
  }
}
