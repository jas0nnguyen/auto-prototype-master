{
  "version": 2,
  "installCommand": "node scripts/setup-npmrc.js && npm install && cd backend && npm install",
  "buildCommand": "npm run build && cd backend && npm run build",
  "devCommand": "npm run dev",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs22.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 