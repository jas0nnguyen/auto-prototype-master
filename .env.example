# ============================================
# REQUIRED FOR DEPLOYMENT
# ============================================

# GitHub Token for Canary Design System
# Create a GitHub Personal Access Token with 'read:packages' scope
# https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ============================================
# DATABASE (Neon PostgreSQL)
# ============================================

# Recommended for most uses (with connection pooling)
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/dbname?sslmode=require

# Unpooled connection (for migrations, admin tasks)
DATABASE_URL_UNPOOLED=postgresql://user:password@host.region.aws.neon.tech/dbname?sslmode=require

# PostgreSQL Connection Parameters
PGHOST=host-pooler.region.aws.neon.tech
PGHOST_UNPOOLED=host.region.aws.neon.tech
PGUSER=db_owner
PGDATABASE=dbname
PGPASSWORD=your_password_here

# Vercel Postgres Template Variables
POSTGRES_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/dbname?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host.region.aws.neon.tech/dbname?sslmode=require
POSTGRES_USER=db_owner
POSTGRES_HOST=host-pooler.region.aws.neon.tech
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=dbname
POSTGRES_URL_NO_SSL=postgresql://user:password@host-pooler.region.aws.neon.tech/dbname
POSTGRES_PRISMA_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/dbname?connect_timeout=15&sslmode=require

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# API Configuration (optional - only if backend is deployed)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_MOCK_SERVICES=true
VITE_MOCK_SCENARIO=realistic

# Environment
VITE_ENV=development

